<% provide :title, t("user.edit.title") %>
<% provide :button_text, t("user.edit.button_text") %>
<h1><%= t "user.edit.header" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
